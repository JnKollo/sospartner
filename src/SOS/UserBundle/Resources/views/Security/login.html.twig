{% extends "::base.html.twig" %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="text-center">
                    {% for flash_message in app.session.flashBag.get('notice') %}
                        <div class="alert alert-success">
                            {{ flash_message }}
                        </div>
                    {% endfor %}
                </div>
                <div class="row">
                    <div class="text-center">
                        <h2 class="page-header">SOS Partner</h2>
                    </div>
                </div>
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Connexion</h3>
                    </div>
                    <div class="panel-body">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.message }}</div>
                        {% endif %}
                        <form role="form" action="{{ path('sos_login_check') }}" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Nom d'utilisateur" type="text" id="username" name="_username" value="{{ last_username }}" autofocus/>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Mot de passe" type="password" id="password" name="_password" />
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="_remember_me" type="checkbox" value="remember me" checked>Se souvenir de moi
                                    </label>
                                </div>
                                <div class="form-group text-center">
                                    Pas encore inscrit ?
                                    <a href="{{ path('sos_register') }}">Cr√©ez un compte.</a>
                                </div>
                                <input class="btn btn-lg btn-success btn-block" type="submit" value="Connexion" />
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
