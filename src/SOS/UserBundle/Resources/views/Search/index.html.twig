{% extends 'content.html.twig' %}

{% block title %}Trouver un partenaire{% endblock %}

{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Trouver un partenaire de sport</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>Recherche par activit√© sportive</h4>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form role="form" action="{{ path('sos_user_search') }}" method="post">
                                    <fieldset>
                                        {{ form_start(form) }}
                                        {{ form_row(form.sport) }}
                                        {{ form_row(form.level) }}
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-lg btn-success btn-block">Chercher un partenaire</button>
                                        </div>
                                        {{ form_end(form) }}
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}